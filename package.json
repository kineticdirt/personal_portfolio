{
  "name": "abhinav-allam-portfolio",
  "version": "2.0.0",
  "description": "Modern personal portfolio website showcasing AI/ML projects, skills, and professional experience.",
  "main": "script.js",
  "type": "module",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "start": "npm run dev",
    "build": "npm run lint && npm run test && npm run optimize",
    "optimize": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css styles.css",
    "minify-js": "terser script.js -o dist/script.min.js -c -m",
    "lint": "eslint . --ext .js --fix",
    "lint:css": "stylelint styles.css --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "npm run lint && npm run lint:css && npm run test",
    "deploy": "npm run build && gh-pages -d .",
    "preview": "live-server --port=8080 --open=/dist/",
    "clean": "rimraf dist coverage",
    "postinstall": "npm run validate"
  },
  "keywords": [
    "portfolio",
    "resume",
    "ai-ml",
    "software-engineer",
    "modern-web",
    "responsive-design",
    "dark-mode",
    "abhinav-allam"
  ],
  "author": {
    "name": "Abhinav Allam",
    "email": "abhinavall0123@gmail.com",
    "url": "https://kineticdirt.github.io/personal_portfolio/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kineticdirt/personal_portfolio.git"
  },
  "homepage": "https://kineticdirt.github.io/personal_portfolio/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.24.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "declaration-block-trailing-semicolon": "always"
    }
  }
}
