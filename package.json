{
  "name": "abhinav-allam-portfolio",
  "version": "2.0.0",
  "description": "Modern personal portfolio website showcasing AI/ML projects, skills, and professional experience.",
  "main": "script.js",
  "type": "module",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "dev:api": "NODE_ENV=development nodemon api/server.js",
    "start": "node api/server.js",
    "start:static": "npm run dev",
    "build": "npm run lint && npm run test && npm run optimize",
    "build:static": "npm run build",
    "optimize": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css styles.css",
    "minify-js": "terser script.js -o dist/script.min.js -c -m",
    "lint": "eslint . --ext .js --fix",
    "lint:css": "stylelint styles.css --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "npm run lint && npm run lint:css && npm run test",
    "deploy:gh-pages": "git checkout gh-pages && git merge main --no-edit && git push origin gh-pages && git checkout main",
    "preview": "live-server --port=8080 --open=/dist/",
    "clean": "rimraf dist coverage",
    "tunnel:setup": "chmod +x setup-cloudflare-tunnel.sh && ./setup-cloudflare-tunnel.sh",
    "tunnel:start": "chmod +x deploy.sh && ./deploy.sh start",
    "tunnel:stop": "chmod +x deploy.sh && ./deploy.sh stop",
    "tunnel:restart": "chmod +x deploy.sh && ./deploy.sh restart",
    "tunnel:status": "chmod +x deploy.sh && ./deploy.sh status",
    "tunnel:logs": "chmod +x deploy.sh && ./deploy.sh logs",
    "tunnel:update": "chmod +x deploy.sh && ./deploy.sh update",
    "install:deps": "chmod +x install-dependencies.sh && ./install-dependencies.sh"
  },
  "keywords": [
    "portfolio",
    "resume",
    "ai-ml",
    "software-engineer",
    "modern-web",
    "responsive-design",
    "dark-mode",
    "abhinav-allam"
  ],
  "author": {
    "name": "Abhinav Allam",
    "email": "abhinav.allam@abhinavall.net",
    "url": "https://abhinavall.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kineticdirt/personal_portfolio.git"
  },
  "homepage": "https://kineticdirt.github.io/personal_portfolio/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser": "^5.24.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "nodemon": "^3.0.2"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "color-hex-case": "lower",
      "color-hex-length": "short",
      "declaration-block-trailing-semicolon": "always"
    }
  }
}
